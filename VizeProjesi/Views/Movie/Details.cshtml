@model VizeProjesi.Models.Movie

<div class="container mt-5">
    <div class="card shadow-lg border-0 overflow-hidden bg-dark text-white">
        <div class="row g-0">
            <div class="col-md-5">
                <img src="/img/@Model.ImageUrl" class="img-fluid movie-detail-img" alt="@Model.Title">
            </div>
            <div class="col-md-7">
                <div class="card-body p-5 d-flex flex-column h-100 justify-content-center">

                    <h1 class="display-4 fw-bold mb-3">@Model.Title</h1>

                    <div class="mb-4">
                        <span class="badge @(Model.IMDBScore >= 8.5 ? "bg-success" : "badge-imdb") fs-5 px-3 py-2">
                            IMDb: @Model.IMDBScore
                        </span>
                        <span class="badge bg-secondary fs-5 px-3 py-2 ms-2">Yönetmen: @Model.Director</span>
                    </div>

                    <h4 class="border-start border-4 border-danger ps-3 mb-3">Film Hakkında</h4>
                    <p class="card-text fs-5 text-secondary lh-lg">
                        @Model.Description
                    </p>

                    <div class="mt-5">
                        <a href="/Movie/Index" class="btn btn-outline-light btn-lg px-5">
                            &laquo; Listeye Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>