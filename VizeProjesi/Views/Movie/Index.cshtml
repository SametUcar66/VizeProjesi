@model List<VizeProjesi.Models.Movie>

<div class="container py-4">
    <div class="text-center mb-5">
        <h2 class="fw-bold display-5">Küratör Seçimi Filmler</h2>
        <p class="text-muted">IMDb puanına göre özel olarak sıralanmıştır.</p>
    </div>

    <div class="row">
        @foreach (var film in Model)
        {
            <div class="col-md-4 mb-5">
                <div class="card movie-card h-100 shadow border-0">

                    <div class="position-relative">
                        <img src="/img/@film.ImageUrl" class="card-img-top" alt="@film.Title" style="height: 350px; object-fit: cover;">

                        <span class="position-absolute top-0 end-0 badge m-2 fs-6 @(film.IMDBScore >= 8.5 ? "bg-success" : "bg-warning text-dark")">
                            IMDb: @film.IMDBScore
                        </span>
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold">@film.Title</h5>

                        <p class="card-text text-muted small">
                            @(film.Description.Length > 60 ? film.Description.Substring(0, 60) + "..." : film.Description)
                        </p>

                        <div class="mt-auto">
                            <a href="/Movie/Details/@film.Id" class="btn btn-dark w-100">
                                <i class="bi bi-film"></i> Detayları İncele
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>