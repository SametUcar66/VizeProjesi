@{
    ViewData["Title"] = "İletişim";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow p-4">
            <h2 class="text-center mb-4">Bizimle İletişime Geçin</h2>
            <form>
                <div class="mb-3">
                    <label class="form-label">Adınız Soyadınız</label>
                    <input type="text" class="form-control" placeholder="Örn: Ahmet Yılmaz">
                </div>
                <div class="mb-3">
                    <label class="form-label">E-posta Adresiniz</label>
                    <input type="email" class="form-control" placeholder="isim@ornek.com">
                </div>
                <div class="mb-3">
                    <label class="form-label">Mesajınız</label>
                    <textarea class="form-control" rows="4" placeholder="Bir şeyler yazın..."></textarea>
                </div>
                <button type="submit" class="btn btn-primary w-100">Gönder</button>
            </form>
        </div>
    </div>
</div>